{% extends 'base.html.twig' %}

{% block title %}Lucky Number
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper h1 {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>{{ phrase }}
			{{ number }}
		</h1>
		<ul>
			{% for num in numbers %}
				<li>
					{{ num[0] }}
					{{ num[1] }}
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
