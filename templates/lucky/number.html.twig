{% extends 'base.html.twig' %}

{% block title %}Lucky Number
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper h1 {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.navbar {
			padding: 2rem;
			background: black;
			color: #fff;
			display: flex;
			justify-content: space-between;
		}
		.navbar ul {
			display: flex;
			list-style-type: none;
		}
		.navbar li {
			padding: 1rem;
		}

		.navbar li a {
			color: #fff;
			text-decoration: none;
		}
	</style>
	<div class="navbar">
		<h1>Hello World</h1>
		<div>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="#">Products</a></li>
				<li><a href="#">Contact</a></li>
				<li><a href="/lucky/number/{{random(100)}}">Lucky  Number</a></li>
			</ul>
		</div>
	</div>

	<div class="example-wrapper">
		<form action="/" method="post">
			<table>
				<tr>
					<td>
						<label>Email:</label>
					</td>
					<td><input name="email" type="email" required/></td>
				</tr>
				<tr>
					<td>
						<label>Password:</label>
					</td>
					<td><input name="password" type="password" required/></td>
				</tr>
				<tr>
					<td><input type="submit" value="Submit"/></td>
				</tr>
			</table>
		</form>
	</div>
{% endblock %}
